<h3>Add Developer Profile</h3>
<div class="row">
    <form action="/developers" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="username" name="username">
                <label for="username">Username</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="field" name="field">
                <label for="field">Field of Study</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="github" name="github">
                <label for="github">GitHub(optional)</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="codepen" name="codepen">
                <label for="codepen">Codepen(optional)</label>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>